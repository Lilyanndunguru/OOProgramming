import java.util.*;
public class Conditionalstatement {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        Operation op = new Operation();
        Scanner sc = new Scanner(System.in);
        Conditional con = new Conditional();
        boolean running=true;
        
        while(running){
            System.out.print("Enter case\n");
                   
       
        int numb;
        numb=sc.nextInt();
        
        
                
        switch (numb){
            case 1:
                System.out.print("Please enter two numbers\n");
                op.number1=sc.nextInt();
                op.number2=sc.nextInt();
                op.Addition();
                break;
                
            case 2:
                System.out.print("Please enter two numbers\n");
                op.number1=sc.nextInt();
                op.number2=sc.nextInt();
                op.Subtraction();
                break;
                
            case 3:
                System.out.print("Please enter two numbers\n");
                op.number1=sc.nextInt();
                op.number2=sc.nextInt();
                op.Multiplication();
                break;
                
            case 4:
                System.out.print("Please enter two numbers\n");
                op.number1=sc.nextInt();
                op.number2=sc.nextInt();
                op.Division();
                break;
                
            case 5:
                System.out.print("Please enter number\n");
                con.num=sc.nextInt();
                con.iseven();
            }
        }
    }
}    

        